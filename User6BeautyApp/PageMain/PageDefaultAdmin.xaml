                    Header="Поле"
                    Width="*"
                    Binding="{Binding }"
                    />
                <DataGridTextColumn 
                    Header="Поле"
                    Width="*"
                    Binding="{Binding }"
                    />
                <DataGridTextColumn 
                    Header="Поле"
                    Width="*"
                    Binding="{Binding }"
                    />
                <DataGridTextColumn 
                    Header="Поле"
                    Width="*"
                    Binding="{Binding }"
                    />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button Content="Удалить"/>
